# psql:
alias psql='sudo -u postgres -i'

# mirrors:
alias upm='rate-mirrors --disable-comments-in-file --entry-country=KG --protocol=https manjaro --max-delay 7200 | sudo tee /etc/pacman.d/mirrorlist'

